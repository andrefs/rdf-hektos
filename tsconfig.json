{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2015.promise"],
    "module": "ESNEXT",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
